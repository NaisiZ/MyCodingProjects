#include <iostream>
#include <string>
using namespace std;

class MyPractice
{
public:
/*    1. Write a program to convert given no. of days into months and days. (Assume that each month is of 30 days)
    Example :
Input: 69
Output: 69 days = 2 Month and 9 days
*/
    void daysToMonth(int days)
    {
        m=days/30;
        d=days%30;
        cout<<days<<" days "<<"=" << m<< " Month and " << d<<" days \n";
    }
/*
 2. Write a function to display next n odd numbers from the starting number a. (get
 both a and n values from user)
 */
    void printOdd()
    {
        cout<<"Please enter the numbers of odd numbers you want:";
        cin>>n;
        cout<<"Please enter the number that you want to start with:";
        cin>>s;
        if(s%2==0)//if s is even number
        {
            for (int i=s+1;i<s+2*n;i+=2)
            {
                cout<<i<<" ";
            }
        }
        else
            for(int i=s;i<s+2*n;i+=2)
            {
                cout<<i<<" ";
            }
    }
      /* int sum()
    {
