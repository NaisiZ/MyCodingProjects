    }*/
    int sumOf123(int x)
    {
        int array[10];
        array=to_string(int x);
        
    };
private:
    int m=0;
    int d=0;
    int i=0;
    int n=0;
    int s=0;
    int total=0;
    int x=0;
 };
int main()
{
    MyPractice q1;
    int days;
    cout<<"Please enter the DAYS you want to convert to months/days format: ";
    cin>>days;
    q1.daysToMonth(days);
    
    cout<<endl;
    
    MyPractice q2;
