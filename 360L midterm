#include <iostream>
using namespace std;
class Score
{
public:
    int average(int a, int b)
    {
        return (a+b)/2;
    }
    void check(int score)
    {
        string grade=0;
        if(score>100||score<0)
        {
            grade= "Error";
        }
        else if(score<=100 && score >=98)
        {    grade = "A+";
        }
        else if(score>=93)
        {    grade="A";
        }
        else if(score>=90)
        {    grade="A-";
        }
        else if (score>=80)
        {
            grade="B";
            
        }
        else if (score>=70)
        {    grade="C";
        }
        else if (score>=60)
        {    grade="D";
        }
        else
        {
            grade="F";
        }
        cout<<grade<<endl;
    }
};

class Array
{
public:
    int average(int a[], int size)
    {
        int sum=0;
        for (int i=0;i<size;i++)
            sum += a[i];
        return sum/size;
    }
    void replace(int* p,int size)
    {
        for(int i=0;i<size;i++)
            *(p+i)=i+1;
    }
    void display(int a[])
    {
        int size = 15;
        for(int i=0;i<size;i++)
            cout<<a[i]<<" ";
        cout<<endl;
    }
};

int main()
{
    cout<<"8950.Naisi Zhen"<<endl;
    
    Score q1;
    int math,eng;
    cout<<"Enter your Math score: "<<endl;
    cin>>math;
    cout<<"Enter you English score: \n";
    cin>>eng;
    cout<<endl;
    int avg;
    avg=q1.average(math, eng);
    cout<<avg;
    q1.check(avg);
    
    /*Array m;
    const int size=15;
    int a[size];
    cout<< "enter numbers to initialize array"<<endl;
    for (int i=0;i<size;i++)
        cin>>a[i];
    
    cout << "Array elements:"<<endl;
    m.display(a);
    
    cout << "Average is: " <<m.average(a,size)<<endl;
    
    cout<<"Array elements after replacement:"<<endl;
    m.replace(a,size);
    m.display(a);
    
    cout<< "Average is "<<m.average(a,size)<<endl;
    */
    return 0;
}
