#include <iostream>
using namespace std;

struct Bank
{
    int ID;
    string name;
    double balance;
    
};

class MyClass
{
public:
    
    void modify (Bank *b)
    {
        cout<<"Enter your ID: " ;
        cin>>b->ID;
        cout<<"Enter your name: " ;
        cin>>b->name;
        cout<<"Enter your gpa: " ;
        cin>>b->balance;
    }
};

int main()
{
    Bank b1;
    Bank *p;
    p=&b1;
    
    cout<<"Enter your ID: " ;
    cin>>p->ID;
    cout<<"Enter your name: " ;
    cin>>p->name;
    cout<<"Enter your gpa: " ;
    cin>>p->balance;
    
    MyClass a;
    a.modify(&b1);
    
    cout<<b1.ID<<endl;
    cout<<b1.name<<endl;
    cout<<b1.balance<<endl;
    return 0;
}
