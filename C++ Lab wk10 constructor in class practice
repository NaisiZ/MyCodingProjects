#include <iostream>
using namespace std;

class Salary
{
private:
    double work_hour;
    double rate;
public:
    Salary(double hour, double r)
    // 1st : work_hour(hour),rate(r)
    {
        // 2nd way
        work_hour=hour;
        rate = r;
        
        /* 3rd way
        setHour(hour);
        setRate(r);
         */
    }
    void setHour(double h)
    {
        work_hour=h;
    }
    double getHour()
    {
        return work_hour;
    }
    void setRate(double r)
    {
        rate=r;
    }
    double getRate()
    {
        return rate;
    }
    double count()
    {
        return rate * work_hour;
    }
    
};
